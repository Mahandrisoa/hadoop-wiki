<configuration>
    <!-- Specify the namespace for the HA cluster -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://myCluster</value>
    </property>

    <!-- Specify ZooKeeper quorum for client failover -->
    <property>
        <name>ha.zookeeper.quorum</name>
        <value>zookeeper:2181</value>
    </property>
</configuration>
